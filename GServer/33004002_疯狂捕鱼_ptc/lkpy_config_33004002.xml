	<Bullet kind="5" name="3炮筒能量炮" speed="60" netRadius="60" />

  <!-- CellScore:单次增加库存量 score:单次增加库存量 -->
	<CellScore score="10000"/>
  <!-- SuperMan:超端玩家 UserID:玩家userID -->
	<SuperMan UserID="14315"/>
	<SuperMan UserID="14316"/>
