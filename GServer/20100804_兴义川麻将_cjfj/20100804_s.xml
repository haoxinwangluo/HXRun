	<!-- 计算规则 (基础番 + 额外番)*倍数-->
	<PaiFan>
		<type id = "0"  doc="平  胡"             value="1"  ziMoAdd="0" ziMoMultiple="1"    enabled="1" /> <!-- 平胡可以自摸胡牌，或在有"豆"情况下允许点胡。-->
		<type id = "1"  doc="大对子"             value="5"  ziMoAdd="0" ziMoMultiple="1"    enabled="1" /> <!-- 即对对胡，成牌时有4个三张相同的和1个对(碰碰胡)。-->
		<type id = "2"  doc="小七对"             value="5"  ziMoAdd="0" ziMoMultiple="1"    enabled="1" /> <!-- 七对,成牌时由7个对子组成。-->
		<type id = "3"  doc="龙七对"             value="10" ziMoAdd="0" ziMoMultiple="1"    enabled="1" /> <!-- 成牌时由5个对子和4个相同的牌组成。-->
		<type id = "4"  doc="青大对"             value="15" ziMoAdd="0" ziMoMultiple="1"    enabled="1" /> <!-- 成牌时由4个三张相同的和1个对，且所有牌都由条、筒、万中的一种组成。(青一色+碰碰胡)。-->
		<type id = "5"  doc="青龙对"             value="20" ziMoAdd="0" ziMoMultiple="1"    enabled="1" /> <!-- 成牌时由5个对子和4个相同的牌组成，且所有牌都由条、筒、万中的一种组成。(青一色+龙七对)。-->
		<type id = "6"  doc="清七对"             value="15" ziMoAdd="0" ziMoMultiple="1"    enabled="1" /> <!-- 成牌时由7个对子组成，且所有牌都由条、筒、万中的一种组成。(清一色+小七对)。-->
		<type id = "7"  doc="清一色"             value="10" ziMoAdd="0" ziMoMultiple="1"    enabled="1" /> <!-- 成牌时所有牌都由条、筒、万中的一种组成。-->
		<type id = "8"  doc="天  胡"             value="100"  ziMoAdd="0" ziMoMultiple="1"  enabled="1" /> <!-- 硬报(庄家天胡):庄家摸第一张牌就胡牌, 结算时每家多收取额外番数 -->
		<type id = "9"  doc="天  听"             value="10"  ziMoAdd="0" ziMoMultiple="1"   enabled="0" /> <!-- 软报(庄):发完牌，就听牌。此玩家可以选择报听，报听后牌被冻结，不能再换手中的牌了。听牌者可以胡报听者的牌，报听者胡牌为胡牌类型加10倍底分 -->
		<type id = "10" doc="地  胡"             value="20"  ziMoAdd="0" ziMoMultiple="1"   enabled="1" /> <!-- 硬报(闲家地胡)：闲家摸第一张牌就胡牌, 结算时每家多收取额外番数 -->
		<type id = "11" doc="地  听"             value="10"  ziMoAdd="0" ziMoMultiple="1"   enabled="0" /> <!-- 软报(闲):闲家摸第一张后听牌。此时玩家可以选择报听，报听后牌被冻结，不能再换手中的牌了。听牌者可以胡报听者点炮的牌，报听者胡牌点炮都是胡牌类型加10倍底分。-->
		<type id = "12" doc="天  杀"             value="0"  ziMoAdd="0" ziMoMultiple="1"    enabled="1" /> <!-- 杀  报(胡牌基础上+此番数)天听或者地听的人放炮，需要在胡牌手中牌型的基础上加X倍底分-->
		<type id = "13" doc="地  杀"             value="3"  ziMoAdd="0" ziMoMultiple="1"    enabled="1" /> <!-- 杠上胡(胡牌基础上+此番数)-->
		<type id = "14" doc="杠上胡"             value="3"  ziMoAdd="0" ziMoMultiple="1"    enabled="1" /> <!-- 杠上胡(胡牌基础上+此番数)-->
		<type id = "15" doc="杠上炮"             value="3"  ziMoAdd="0" ziMoMultiple="1"    enabled="1" /> <!-- 杠上炮(胡牌基础上+此番数)-->
		<type id = "16" doc="抢杠胡"             value="3"  ziMoAdd="0" ziMoMultiple="1"    enabled="1" /> <!-- 抢杠胡(胡牌基础上+此番数)-->
		
	</PaiFan>

