	<Action>
		<type id = "0"  doc="胡"         enabled="1" /> 
		<type id = "1"  doc="听"         enabled="0" /> <!-- 该项会开启 听牌功能 -->
		<type id = "2"  doc="碰"         enabled="1" /> 
		<type id = "3"  doc="杠"         enabled="1" /> 
		<type id = "4"  doc="叫嘴"       enabled="1" /> 
	</Action>
	
	<!-- 各个牌型番数的配置(id值为程序对应值Em_PaiType不能随便更改) -->
