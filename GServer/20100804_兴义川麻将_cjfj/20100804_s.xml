		<type id="4"   doc="金鸡手牌"               value="4" enabled="1" /> <!-- 玩家手上每有一个金鸡的番数 -->
		<type id="5"   doc="金鸡拦牌(碰)"           value="2" enabled="1" /> <!-- 玩家碰中每有一个金鸡的番数 -->
		<type id="6"   doc="金鸡出牌"               value="4" enabled="1" /> <!-- 玩家出牌数据中每有一个金鸡的番数 -->
		<type id="7"   doc="冲锋鸡"                 value="2" enabled="1" /> <!-- 冲锋鸡 -->
		<type id="8"   doc="责任鸡"                 value="0" enabled="1" /> <!-- 责任鸡 -->
